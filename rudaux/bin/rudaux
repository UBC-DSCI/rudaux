#  action='store_true',
#  default=False,
#  help="Specify that late registrations should not actually be provided canvas extensions and print the canvas api calls instead."
#)

#---------------------------------------------
#           Register workflows
#---------------------------------------------

reg_parser = subparsers.add_parser('register', help='register course management workflows')
reg_parser.set_defaults(func=flows.register)
reg_parser.add_argument(
  '--dir',
  dest='directory',
  action='store',
  default=os.getcwd(),
  help="the directory containing the rudaux configuration file."
)

#---------------------------------------------
#           List workflows and status
#---------------------------------------------

status_parser = subparsers.add_parser('status', help='list course management workflows')
status_parser.set_defaults(func=flows.status)
status_parser.add_argument(
  '--dir',
  dest='directory',
  action='store',
  default=os.getcwd(),
  help="the directory containing the rudaux configuration file."
)


#---------------------------------------------
#           Run workflow
#---------------------------------------------

run_parser = subparsers.add_parser('run', help='Run the course management workflow')
run_parser.set_defaults(func=flows.run)
run_parser.add_argument(
  '--course_api_module',
  dest='course_api_module',
  action='store',
  default='canvas',
  help="The name of the course API module."
)
run_parser.add_argument(
  '--snapshot_module',
  dest='snapshot_module',
  action='store',
  default='zfs_over_ssh',
  help="The name of the snapshot module."
)
run_parser.add_argument(
  '--auto_extension_module',
  dest='autoext_module',
  action='store',
  default='latereg',
  help="The name of the automatic extensions module."
)
run_parser.add_argument(
  '--grader_module',
  dest='grader_module',
  action='store',
  default='git_nbgrader',
  help="The name of the grader module."
)
run_parser.add_argument(
  '--dir',
  dest='directory',
  action='store',
  default=os.getcwd(),
  help="The directory containing the rudaux configuration file."
)
run_parser.add_argument(
  '--grading_interval',
  dest='grading_interval',
  action='store',
  default=1,
  help="The interval (minutes) to run the Rudaux flow"
)
run_parser.add_argument(
  '--autoext_interval',
  dest='autoext_interval',
  action='store',
  default=1,
  help="The interval (minutes) to run the autoextension flow"
)
run_parser.add_argument(
  '--snapshot_interval',
  dest='snapshot_interval',
  action='store',
  default=1,
  help="The interval (minutes) to take snapshots" 
)
run_parser.add_argument(
  '--dask_threads',
  dest='dask_threads',
  action='store',
  default=8,
  help="The number of local dask executor threads"
)


# Parse the arguments!
args = parser.parse_args()
if args.subparser is not None:
  args.func(args)
else:
  # Otherwise, no subcommand was called, so print a header and help text
  sys.stdout.write("\n")
  termcolor.cprint(pyfiglet.figlet_format("Rudaux"), 'blue', attrs=['bold'])
  sys.stdout.write('Version 0.2\n')
  sys.stdout.write('DateTime: ' + str(plm.now('UTC'))+'\n') 
  sys.stdout.write('Command: ' + str(sys.argv)+'\n')
  sys.stdout.write("Visit the documentation at https://ubc-dsci.github.io/rudaux\n")
  sys.stdout.write('============================================================\n')
  sys.stdout.write('\n')
  args = parser.parse_known_args(['-h'])
