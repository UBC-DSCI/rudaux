#!/usr/bin/python3

from argparse import ArgumentParser
from rudaux import flows, __version__
import pendulum as plm
import os, sys
import pyfiglet, termcolor

parser = ArgumentParser()
subparsers = parser.add_subparsers(
  title='Subcommands', dest="subparser", help='Commands that rudaux can process.'
)

#---------------------------------------------
#           Run workflows with orchestration
#---------------------------------------------
reg_parser = subparsers.add_parser('register', help='Register course management workflows with an orchestration server')
reg_parser.set_defaults(func=flows.register)
reg_parser.add_argument(
  '--dir',
  dest='directory',
  action='store',
  default=os.getcwd(),
  help="the directory containing the rudaux configuration file."
)
reg_parser.add_argument(
  '--all',
  dest='all_flows',
  action='store_true',
  help="Register all flows"
)
reg_parser.add_argument(
  '--autoext',
  dest='autoext',
  action='store_true',
  help="Register the autoextension flow"
)
reg_parser.add_argument(
  '--snap',
  dest='snap',
  action='store_true',
  help="Register the snapshot flow"
)
reg_parser.add_argument(
  '--grade',
  dest='grade',
  action='store_true',
  help="Register the grading flow"
)
reg_parser.add_argument(
  '--grading_interval',
  dest='grading_interval',
  action='store',
  default=1,
  help="The interval (minutes) to reg the Rudaux flow"
)
reg_parser.add_argument(
  '--autoext_interval',
  dest='autoext_interval',
  action='store',
  default=60,
  help="The interval (minutes) to reg the autoextension flow"
)
reg_parser.add_argument(
  '--snapshot_interval',
  dest='snapshot_interval',
  action='store',
  default=30,
  help="The interval (minutes) to take snapshots"
)
#reg_parser.add_argument(
#  '--dask_threads',
#  dest='dask_threads',
#  action='store',
#  default=8,
#  help="The number of local dask executor threads"
#)

#---------------------------------------------
#           Run workflows in threads locally
#---------------------------------------------
run_parser = subparsers.add_parser('run', help='Run course management workflows locally in threads')
run_parser.set_defaults(func=flows.run)
run_parser.add_argument(
  '--dir',
  dest='directory',
  action='store',
  default=os.getcwd(),
  help="the directory containing the rudaux configuration file."
)
run_parser.add_argument(
  '--all',
  dest='all_flows',
  action='store_true',
  help="Run all flows"
)
run_parser.add_argument(
  '--autoext',
  dest='autoext',
  action='store_true',
  help="Run the autoextension flow"
)
run_parser.add_argument(
  '--snap',
  dest='snap',
  action='store_true',
  help="Run the snapshot flow"
)
run_parser.add_argument(
  '--grade',
  dest='grade',
  action='store_true',
  help="Run the grading flow"
)
run_parser.add_argument(
  '--grading_interval',
  dest='grading_interval',
  action='store',
  default=1,
  help="The interval (minutes) to reg the Rudaux flow"
)
run_parser.add_argument(
  '--autoext_interval',
  dest='autoext_interval',
  action='store',
  default=60,
  help="The interval (minutes) to reg the autoextension flow"
)
run_parser.add_argument(
  '--snapshot_interval',
  dest='snapshot_interval',
  action='store',
  default=30,
  help="The interval (minutes) to take snapshots"
)

#---------------------------------------------
#           List workflows/runs and status
#---------------------------------------------
status_parser = subparsers.add_parser('status', help='Print workflow status')
status_parser.set_defaults(func=flows.status)

